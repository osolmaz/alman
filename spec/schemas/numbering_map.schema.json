{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["paragraphIdMapping", "ruleIdMapping"],
  "properties": {
    "paragraphIdMapping": {
      "type": "object",
      "patternProperties": {
        "^paragraph-\\d+-\\d+$": {
          "type": "string",
          "pattern": "^\\d+$",
          "description": "Legal numbering for paragraphs"
        }
      },
      "additionalProperties": false
    },
    "ruleIdMapping": {
      "type": "object",
      "patternProperties": {
        "^rule-\\d+-\\d+-\\d+$": {
          "type": "string",
          "pattern": "^[a-z0-9]+$",
          "description": "Legal numbering for rules"
        }
      },
      "additionalProperties": false
    }
  }
} 