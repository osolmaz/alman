{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["documentTitle", "documentVersion", "lastUpdated", "sections"],
  "properties": {
    "documentTitle": {
      "type": "string",
      "description": "The title of the Alman grammar rules document"
    },
    "documentVersion": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version of the document"
    },
    "lastUpdated": {
      "type": "string",
      "format": "date",
      "description": "Date of last update in YYYY-MM-DD format"
    },
    "sections": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["sectionFile"],
        "properties": {
          "sectionFile": {
            "type": "string",
            "pattern": "^sections/[a-z0-9-]+/section\\.json$",
            "description": "Path to the section file"
          }
        }
      }
    }
  }
} 