{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["id", "title", "body", "ruleFiles"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^paragraph-\\d+-\\d+$",
      "description": "Unique identifier for the paragraph"
    },
    "title": {
      "type": "string",
      "description": "Title of the paragraph"
    },
    "body": {
      "type": "string",
      "description": "Description or content of the paragraph"
    },
    "ruleFiles": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^sections/section-\\d+/paragraphs/paragraph-\\d+-\\d+/rule-\\d+-\\d+-\\d+\\.json$",
        "description": "Path to a rule file"
      }
    }
  }
} 