{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["id", "title", "body", "paragraphs"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Slugified identifier for the section"
    },
    "title": {
      "type": "string",
      "description": "Title of the section"
    },
    "body": {
      "type": "string",
      "description": "Description or content of the section"
    },
    "paragraphs": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["paragraphFile"],
        "properties": {
          "paragraphFile": {
            "type": "string",
            "pattern": "^sections/[a-z0-9-]+/paragraphs/[a-z0-9-]+/paragraph\\.json$",
            "description": "Path to the paragraph file"
          }
        }
      }
    }
  }
}